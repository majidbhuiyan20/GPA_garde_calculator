<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="15dp"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GPA Calculator"
        android:textSize="30sp"
        android:textColor="#068181"
        android:textStyle="bold"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="Bangla: "
            android:textSize="30sp"
            android:textColor="#02C5C5"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/edBangla"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:hint="Enter Marks"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#02C5C5"
            android:inputType="numberDecimal"
            android:layout_weight="2"
            />

    </LinearLayout>

    //===============================================

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="English: "
            android:textSize="30sp"
            android:textColor="#02C5C5"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/edEnglish"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:hint="Enter Marks"
            android:gravity="center"
            android:textSize="20sp"
            android:inputType="numberDecimal"
            android:textColor="#02C5C5"
            android:layout_weight="2"
            />

    </LinearLayout>

    //===============================================


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="Mathematics:"
            android:textSize="30sp"
            android:textColor="#02C5C5"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/edMathematics"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"
            android:padding="15dp"
            android:inputType="numberDecimal"
            android:layout_marginLeft="20dp"
            android:hint="Enter Marks"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#02C5C5"
            android:layout_weight="2"
            />

    </LinearLayout>

    //===============================================







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="Physics: "
            android:textSize="30sp"
            android:textColor="#02C5C5"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/edPhysics"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:hint="Enter Marks"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#02C5C5"
            android:layout_weight="2"
            />

    </LinearLayout>

    //===============================================
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="Chemistry: "
            android:textSize="30sp"
            android:textColor="#02C5C5"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/edChemistry"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:hint="Enter Marks"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#02C5C5"
            android:layout_weight="2"
            />

    </LinearLayout>

    //===============================================
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Biology: "
            android:textSize="30sp"
            android:textColor="#02C5C5"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/edBiology"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:hint="Enter Marks"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            android:textColor="#02C5C5"
            android:layout_weight="2"
            />

    </LinearLayout>

    //===============================================

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Show GPA"
            android:backgroundTint="#068181"
            android:padding="12dp"
            android:textSize="20sp"
            />
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edit_round"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textSize="25dp"
        android:textColor="#068181"
        />




</LinearLayout>